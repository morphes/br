mutation ($input: AddBasketInput!) {
  addBasket(input: $input) {
    products {
      item{
        id
        name
      }
      qty
      price
    	lenses {
        lenses {
          name
          options {
            name
            value
          }
        }
        recipes {
          left {
            name
            value
          }
          right{
            name
            value
          }
        }
      }
    }
  }
}

{
  "input": {
    "item_id": 114
  }
}