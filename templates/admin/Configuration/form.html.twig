{% set _entity_config = easyadmin_entity(app.request.query.get('entity')) %}
{% extends _entity_config.templates.layout %}

{% block content_title %}
    {{ _entity_config.name }}
{% endblock %}

{% block main %}
    <form action="/admin/" method="GET">
        <input type="hidden" name="entity" value="Configuration"/>
        <input type="hidden" name="action" value="save"/>
        <div id="accordion">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne"
                                aria-expanded="true"
                                aria-controls="collapseOne">
                            Ценообразование
                        </button>
                    </h5>
                </div>

                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="profit">Маржинальность</label>
                            <input type="text" class="form-control" name="profit" id="profit" value="{{ list.profit is defined ? list.profit : '' }}"/>
                        </div>
                        <div class="form-group">
                            <label for="profit">Стоп тег-слова</label>
                            <input type="text" class="form-control" name="stop_tag" id="stop_tag" value="{{ list.stop_tag is defined ? list.stop_tag : '' }}"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne"
                                aria-expanded="true"
                                aria-controls="collapseOne">
                            Теги
                        </button>
                    </h5>
                </div>

                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="profit">Тег аромата</label>
                            <select class="form-control" name="fragrance_tag">
                                {% for tag in tags %}
                                    <option value="{{ tag.id }}" {{ list.fragrance_tag is defined and list.fragrance_tag == tag.id ? 'selected' : '' }}>{{ tag.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="profit">Тег бренда</label>
                            <select class="form-control" name="brand_tag">
                                {% for tag in tags %}
                                    <option value="{{ tag.id }}" {{ list.brand_tag is defined and list.brand_tag == tag.id ? 'selected' : '' }}>{{ tag.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="profit">Линзовый тег бренда</label>
                            <select class="form-control" name="lense_brand_tag">
                                {% for tag in lense_tags.getTree() %}
                                    <option value="{{ tag.id }}" {{ list.lense_brand_tag is defined and list.lense_brand_tag == tag.id ? 'selected' : '' }}>{{ tag.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="profit">Линзовый тег типа</label>
                            <select class="form-control" name="lense_type_tag">
                                {% for tag in lense_tags.getTree() %}
                                    <option value="{{ tag.id }}" {{ list.lense_type_tag is defined and list.lense_type_tag == tag.id ? 'selected' : '' }}>{{ tag.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="profit">Линзовый тег назначение</label>
                            <select class="form-control" name="lense_function_tag">
                                {% for tag in lense_tags.getTree() %}
                                    <option value="{{ tag.id }}" {{ list.lense_function_tag is defined and list.lense_function_tag == tag.id ? 'selected' : '' }}>{{ tag.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="profit">Линзовый тег покрытие</label>
                            <select class="form-control" name="lense_covering_tag">
                                {% for tag in lense_tags.getTree() %}
                                    <option value="{{ tag.id }}" {{ list.lense_covering_tag is defined and list.lense_covering_tag == tag.id ? 'selected' : '' }}>{{ tag.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="profit">Линзовый тег толщина</label>
                            <select class="form-control" name="lense_thickness_tag">
                                {% for tag in lense_tags.getTree() %}
                                    <option value="{{ tag.id }}" {{ list.lense_thickness_tag is defined and list.lense_thickness_tag == tag.id ? 'selected' : '' }}>{{ tag.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="profit">Порядок обязательных тегов для похожих продуктов (от более приоритетных к менее приоритетным)</label>
                            <input type="text" class="form-control" name="required_tags_similar_products" id="required_tags_similar_products" value="{{ list.required_tags_similar_products is defined ? list.required_tags_similar_products : '' }}"/>
                        </div>
                        <div class="form-group">
                            <label for="profit">Порядок дополнительных тегов для похожих товаров (от более приоритетных к менее приоритетным)</label>
                            <input type="text" class="form-control" name="extra_tags_similar_products" id="extra_tags_similar_products" value="{{ list.extra_tags_similar_products is defined ? list.extra_tags_similar_products : '' }}"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne"
                                aria-expanded="true"
                                aria-controls="collapseOne">
                            Google Merchant
                        </button>
                    </h5>
                </div>

                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="tag_gm">Тег Google Merchant Category</label>
                            <select class="form-control" name="tag_gm">
                                {% for tag in tags %}
                                    <option value="{{ tag.id }}" {{ list.tag_gm is defined and list.tag_gm == tag.id ? 'selected' : '' }}>{{ tag.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="profit">Описание фида</label>
                            <input type="text" class="form-control" name="gm_description" id="gm_description" value="{{ list.gm_description is defined ? list.gm_description : '' }}"/>
                        </div>
                        <div class="form-group">
                            <label for="profit">Наименование фида</label>
                            <input type="text" class="form-control" name="gm_name" id="gm_name" value="{{ list.gm_name is defined ? list.gm_name : '' }}"/>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </form>
{% endblock main %}
