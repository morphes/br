{% block _catalog_catalog_urls_widget %}
    {% set entity = form.parent.vars.data %}
    <div id="catalog_catalog_urls">
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">Новый url</label>
            <div class="col-sm-8">
                <input type="text" name="" class="form-control" id="new_url" placeholder="" value="">
            </div>
            <button type="button" class="btn btn-primary" onclick="add_url()">Добавить</button>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Путь</th>
                    <th></th>
                </tr>
                </thead>
                <tbody id="url_list"></tbody>
            </table>
        </div>
    </div>
    {#{% for key, url in catalog_urls.all() %}#}
        {#{{ url.url }}#}
    {#{% endfor %}#}
    {#{% for row in form.parent.vars.data.catalogUrls %}#}
        {#<a href="/{{ row.url }}">{{ row.url }}</a><br/>#}
    {#{% endfor %}#}
    <script type="text/javascript">
        function add_url() {
            var url = $('#new_url').val();
            if (url && !/\/$/.test(url)) {
                url = url + '/';
            }
            $.post("/admin/?" + $.param({'entity': 'Catalog', 'action': 'addUrl'}), {
                'url': url
            }, function (response) {
                $('#catalog_catalog_urls').prepend('<input type="hidden" name="url[]" value="' + response.id + '"/>');
                $('#url_row').tmpl({
                    id: response.id,
                    url: url
                }).appendTo('#url_list');
            }, 'json');
        }
    </script>
    <script id="url_row" type="text/x-jquery-tmpl">
        <tr id="row_url_${id}">
            <td><a href="${url}">/${url}</a></td>
            <td eid="${id}">
                <button type="button" class="btn btn-default" onclick="active_url(this)">Активный</button>
                <button type="button" class="btn btn-default" onclick="delete_url(this)"><span
                            class="glyphicon glyphicon-trash"></span></button>
            </td>
        </tr>
    </script>
{% endblock %}